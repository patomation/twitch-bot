{
  "name": "twitch-bot",
  "version": "0.0.0",
  "description": "",
  "main": "src/bot/",
  "scripts": {
    "start": "concurrently \"npm:transpile:bot -- --watch\" \"npm:start:bot\" \"npm:transpile:overlay -- --watch\" \"npm:start:overlay\" ",
    "transpile:bot": "tsc --build ./src/bot/tsconfig.json",
    "start:bot": "nodemon ./build/bot/bot.js --watch build/bot",
    "transpile:overlay": "tsc --build ./src/overlay/tsconfig.json",
    "start:overlay": "webpack-dev-server --hot",
    "transpile": "run-s transpile:bot transpile:overlay transpile:test",
    "lint": "./node_modules/.bin/eslint '**/*.{js,ts,tsx}'",
    "transpile:test": "tsc --build ./src/test/tsconfig.json",
    "unit": "ava",
    "test": "run-s lint transpile unit",
    "coverage": "nyc ava"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "build/test/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patomation/twitch-bot.git"
  },
  "keywords": [
    "twitch",
    "chat",
    "bot"
  ],
  "author": "Patrick Kelly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patomation/twitch-bot/issues"
  },
  "homepage": "https://github.com/patomation/twitch-bot#readme",
  "dependencies": {
    "badwords": "1.0.0",
    "dotenv": "8.2.0",
    "tmi.js": "1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/cors": "2.8.7",
    "@types/express": "4.17.8",
    "@types/tmi.js": "1.4.2",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "ava": "3.12.1",
    "concurrently": "5.3.0",
    "cors": "2.8.5",
    "eslint": "7.9.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-vue": "6.2.2",
    "express": "4.17.1",
    "file-loader": "6.1.0",
    "html-webpack-plugin": "4.4.1",
    "husky": "4.3.0",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "routerjs": "2.4.5",
    "snabbdom": "2.1.0",
    "tsconfigs": "5.0.0",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  }
}
